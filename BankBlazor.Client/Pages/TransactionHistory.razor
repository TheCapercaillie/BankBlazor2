@page "/account/{AccountId:int}"
@using BankBlazor.Shared.Models.DTOs
@inject HttpClient Http

<h2>Transaction History</h2>

@if (transactions == null)
{
    <p>Loading...</p>
}
else if (!transactions.Any())
{
    <p>No transactions found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Operation</th>
                <th>Balance After</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tx in transactions)
            {
                <tr>
                    <td>@tx.Date.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@tx.Type</td>
                    <td>@tx.Amount.ToString("C2")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [Parameter]
    public int AccountId { get; set; }

    private List<TransactionDto>? transactions;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            transactions = await Http.GetFromJsonAsync<List<TransactionDto>>($"api/bank/accounts/{AccountId}/transactions");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to load transactions: {ex.Message}");
            transactions = new();
        }
    }
}
